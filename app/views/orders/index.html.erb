<p><%= link_to "All books", books_path %></p>

<div class="container">
  <h1>All Orders</h1>

  <% @orders.each do |order| %>
    <%  @book = Book.find {|book| book.id == order.book_id} %>
    <h2><%= @book.title %></h2>
    <h2><%= order.start_date %></h2>
    <h2><%= order.end_date %></h2>
    <h2><%= order.order_total %></h2>
    <h2><%= order.quantity %></h2>
    <h2><%= order.status %></h2>

    <h2><%= link_to "Go to order", order_path(order) %></h2>
    <h2><%= link_to "Cancel order", order_path(order), method: :delete,
              data: { confirm: "Are you sure?" } %></h2>

    <hr>
  <% end %>
</div>
