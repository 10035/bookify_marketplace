<ul style="list-style-type:none; padding-left: 0;">
  <li class="nav-item active ">
  <%= link_to "Add book", new_book_path, class: "nav-link"  %>
  </li>
  <li class="nav-item active ">
  <%= link_to "All Orders", orders_path, class: "nav-link"  %>
  </li>
</ul>

<div class="container">
  <% @books.each do |book| %>
    <h1><%= book.title %></h1>
    <%book.photos.each do |photo|  %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    <p><%= link_to "Book info", book_path(book) %></p>
  <% end %>
</div>


