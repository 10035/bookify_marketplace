<div class="container">
  <ul class="nav justify-content-center" style="list-style-type:none; padding-left: 0;">
    <li class="nav-item">
      <%= link_to "ALL BOOKS", books_path, class: "nav-link active"  %>
    </li>
  </ul>

  <div class="container">
    <div class="row  justify-content-center">
      <div class="col-12 col-md-6 col-sm-4">
        <%= simple_form_for @book do |f| %>
          <%= f.input :title %>
          <%= f.input :author_id, collection: Author.all.map { |author| ["#{author.first_name} #{author.last_name} ", author.id ] }%>
          <%= f.input :published_year %>
          <%= f.input :genre %>
          <%= f.input :price %>
          <%= f.input :description %>
          <%= f.input :photos, as: :file, input_html: {multiple: true} %>
          <%# <span class="input-group-addon"><i class="fas fa-plus-square"></i></span> %>
          <%= f.button :submit, class:"btns"%>
        <% end %>
      </div>
    </div>
  </div>
</div>



