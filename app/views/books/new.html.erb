<%= simple_form_for @book do |f| %>
  <%= f.input :title %>
  <%= f.input :author, collection: Author::AUTHORS %>
  <%= f.input :published_year %>
  <%= f.input :genre %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.button :submit %>
<% end %>

<%= link_to "All Books", books_path %>
