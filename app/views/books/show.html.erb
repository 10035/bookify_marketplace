    <%# if current_user.id != @book.user_id  %>
       <%= simple_form_for([@book, @order]) do |f| %>
           <%= f.input :start_date, as: :string, type: :text, input_html: { id: 'order_start_date'}  %>
           <%= f.input :end_date, as: :string, type: :text,  input_html: { id: 'order_end_date'}  %>
           <%= f.submit "Rent", class: "btn btn-primary" %>
        <% end %>
    <%# end %>
 </div>


