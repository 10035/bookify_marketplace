<div class="container">
  <div class="jumbotron vertical-center">
    <h1 ><%= @book.title.upcase %></h1>
    <%@book.photos.each do |photo|  %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fit %>
    <% end %>
    <p><%= @book.published_year %></p>
    <p><%= @book.genre %></p>
    <p><i class="fas fa-dollar-sign" ></i><%= @book.price %></p>
    <p><%= @book.description %></p>
    <p><%= @book.author.first_name%> <%=@book.author.last_name%></p>
    <p><%= link_to "Author details", author_book_path%></p>
    <%= link_to "Back", books_path%>
  </div>
</div>


<div class="container">
  <div class="jumbotron vertical-center">
    <div class="container">
      <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
        <h2>Rent <%=  %></h2>
        <%# if current_user.id != @book.user_id  %>
          <%= simple_form_for([@book, @order]) do |f| %>
            <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.button :submit, "Rent Book", class: "btn btn-primary" %>
          <% end %>
        <%# end %>
      </div>
    </div>
  </div>
</div>

<%# BOOK REVIEWS %>
<div class="container">
  <div class="jumbotron vertical-center">
    <h2>Book Reviews</h2>
    <p><% @book.reviews.each do |review| %></p>
    <p><%= review.rating %> <%= review.content %> </p>
    <% end %>
  </div>
</div>

