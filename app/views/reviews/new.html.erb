<div class="container justify-content-center">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6">
      <div class="container">
        <h1 class="text-center">Add Review</h1>
        <% @order.book.photos.each do |photo|  %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fit %>
        <% end %>
      </div>
          </div>
  </div>
</div

      <br>

      <div class="container">
       <div class="row justify-content-center jumbotron vertical-center jumbotron-fluid">
          <div class="col-12 col-md-8 col-sm-4">
        <%= simple_form_for [@order, @review] do |f| %>
          <%= f.input :rating, as: :radio_buttons, collection: 1..5, selected: 5 %>
          <%= f.input :content %>
          <%= f.button :submit, class: "btns" %>
        <% end %>
        </div>
        </div>
      </div>
